<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Main">

    <Button
        android:id="@+id/btnDangXuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng xuất" />
    <Button
        android:id="@+id/btnTaiKhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý tài khoản" />
    <Button
        android:id="@+id/btnChoO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỗ ở" />
    <Button
        android:id="@+id/btnHoaDongGiaiTri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hoạt động giải trí" />
    <Button
        android:id="@+id/btnVanChuyen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vận chuyển" />

</LinearLayout>