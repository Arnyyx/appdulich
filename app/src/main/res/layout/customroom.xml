<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="195dp"
        android:layout_height="157dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anhcuong1"
        android:layout_gravity="start"
        android:layout_margin="0dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/roomNumberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả phòng A1"
            android:textSize="16sp"
            android:textColor="@color/custom_color_15" />

        <TextView
            android:id="@+id/soluongTextView"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="Phòng 2 người"
            android:textColor="@color/custom_color_15"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Giá: 100.000 VND/đêm"
            android:textColor="@color/custom_color_13" />

    </LinearLayout>
</LinearLayout>
